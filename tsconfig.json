{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist/src",
    "lib": ["DOM", "ES6"],
    "jsx": "react-jsx", // Or "react" for older versions
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],

  "exclude": ["node_modules", "dist"]
}
